<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarContact">
        <item name="android:textColor">@color/edoe_blue</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarStatus">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ToolbarStatus.Typing">
        <item name="android:textColor">@color/edoe_blue</item>
    </style>

    <style name="MessageTextInput" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">#B3BAC8</item>
    </style>

    <style name="MessageOther">
        <item name="android:textColor">#6D7A9F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MessageMine">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MessageTimestamp">
        <item name="android:textColor">#B3BAC8</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>